class Solution {
    // Function to find equilibrium point in the array.
    public static int findEquilibrium(int arr[]) {
        // code here
        int lsum=0;
        int rsum=0;
        int epoint=-1;
        int n=arr.length;
        for(int i=0;i<arr.length;i++){
            rsum=rsum+arr[i];
        }
        
        for(int j=0;j<n;j++){
            rsum=rsum-arr[j];
            if(lsum==rsum){
                epoint=j;
                break;
            }
            lsum+=arr[j];
        }
        
        return epoint;
    }
}
