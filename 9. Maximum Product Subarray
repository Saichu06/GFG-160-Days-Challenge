class Solution {
    int maxProduct(int[] arr) {
        int n=arr.length;
        int maxprod=arr[0];
        int pref=1;
        int suff=1;
        
        for(int i=0;i<n;i++){
            if(pref==0) pref=1;
            if(suff==0) suff=1;
            
            pref=pref*arr[i];
            suff=suff*arr[n-i-1];
            
            maxprod=Math.max(maxprod,Math.max(pref,suff));
        }
        
        return maxprod;
    }
}
